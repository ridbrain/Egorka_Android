<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Splash">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>
    
    <style name="Handle">
        <item name="android:layout_width">@dimen/_25sdp</item>
        <item name="android:layout_height">@dimen/_4sdp</item>
        <item name="android:layout_gravity">center</item>
        <item name="cardBackgroundColor">@color/colorGray</item>
        <item name="cardCornerRadius">@dimen/_2sdp</item>
        <item name="cardElevation">0dp</item>
    </style>

    <style name="EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_40sdp</item>
        <item name="android:background">@drawable/background_edit_text</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="fontFamily">sans-serif</item>
        <item name="android:clickable">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:focusable">true</item>
        <item name="android:inputType">textCapWords</item>
        <item name="singleLine">true</item>
    </style>

    <style name="Label">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="fontFamily">sans-serif</item>
    </style>

    <style name="GrayLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/_10sdp</item>
        <item name="android:layout_marginStart">@dimen/_15sdp</item>
        <item name="android:textColor">@color/colorGrayDark</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">sans-serif</item>
    </style>

    <style name="Ring">
        <item name="android:layout_width">@dimen/_11sdp</item>
        <item name="android:layout_height">@dimen/_11sdp</item>
        <item name="android:background">@drawable/background_round_red</item>
    </style>

    <style name="AlertDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="dialogCornerRadius">@dimen/_10sdp</item>
        <item name="buttonBarNegativeButtonStyle">@style/DialogButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/DialogButtonStyle</item>
    </style>

    <style name="DialogButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="materialThemeOverlay">@style/DialogButtonColor</item>
    </style>

    <style name="DialogButtonColor">
        <item name="colorPrimary">@color/colorAccent</item>
    </style>

    <style name="MyActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_40sdp</item>
        <item name="android:background">@color/colorWhite</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">top</item>
    </style>

    <style name="MyActionTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/_60sdp</item>
        <item name="android:layout_marginRight">@dimen/_60sdp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">@dimen/_13sdp</item>
        <item name="fontFamily">sans-serif</item>
    </style>

    <style name="MyActionRightText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">@dimen/_15sdp</item>
        <item name="android:layout_gravity">center|right</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@drawable/selector_accent</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="fontFamily">sans-serif</item>
    </style>

    <style name="MyActionLeft">
        <item name="android:layout_width">@dimen/_40sdp</item>
        <item name="android:layout_height">@dimen/_40sdp</item>
        <item name="android:layout_marginLeft">@dimen/_5sdp</item>
        <item name="android:padding">@dimen/_11sdp</item>
        <item name="android:layout_gravity">center|left</item>
        <item name="android:tint">@drawable/selector_action_bar</item>
        <item name="android:src">@drawable/ic_back</item>
    </style>

    <style name="MyActionRight">
        <item name="android:layout_width">@dimen/_40sdp</item>
        <item name="android:layout_height">@dimen/_40sdp</item>
        <item name="android:layout_marginRight">@dimen/_5sdp</item>
        <item name="android:padding">@dimen/_11sdp</item>
        <item name="android:layout_gravity">center|right</item>
        <item name="android:tint">@drawable/selector_action_bar</item>
    </style>

    <style name="ActionButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@drawable/selector_accent</item>
        <item name="android:textSize">@dimen/_11sdp</item>
        <item name="fontFamily">sans-serif</item>
    </style>

    <style name="DatePicker" parent="Theme.AppCompat.Light.Dialog">
        <item name="dialogCornerRadius">@dimen/_10sdp</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

</resources>