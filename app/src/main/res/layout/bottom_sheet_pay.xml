<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_125sdp"
        android:id="@+id/bottomSheetPay"
        android:elevation="@dimen/_10sdp"
        android:orientation="vertical"
        android:background="@drawable/background_bottom_sheet_white"
        app:layout_behavior="@string/bottom_sheet_behavior">

    <androidx.cardview.widget.CardView
            style="@style/Handle"
            android:layout_marginTop="@dimen/_5sdp"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/_10sdp"
            android:paddingRight="@dimen/_10sdp"
            android:orientation="vertical">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <ImageView
                    android:id="@+id/typeImage"
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="@dimen/_70sdp"
                    android:padding="@dimen/_3sdp"
                    android:src="@drawable/ic_leg"
                    app:tint="@color/colorAccent"
                    tools:ignore="ContentDescription"/>

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                <TextView
                        style="@style/Label"
                        android:id="@+id/typeLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Пеший"
                        android:textSize="@dimen/_17sdp" />

                <TextView
                        style="@style/Label"
                        android:id="@+id/priceLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1900 Р"
                        android:textStyle="bold"
                        android:textSize="@dimen/_20sdp"/>

            </LinearLayout>

            <TextView
                    style="@style/Label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_minus5sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_gravity="center"
                    android:text="}"
                    android:textFontWeight="100"
                    android:textSize="@dimen/_45sdp"
                    tools:ignore="HardcodedText,UnusedAttribute"/>

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                <TextView
                        style="@style/Label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_1sdp"
                        android:text="400 Р доставка"
                        android:textSize="@dimen/_10sdp"/>

                <TextView
                        style="@style/Label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_1sdp"
                        android:text="0 Р доп. услуги"
                        android:textSize="@dimen/_10sdp"/>

                <TextView
                        style="@style/Label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="11 Р сбор-плат. сист."
                        android:textSize="@dimen/_10sdp"/>

            </LinearLayout>

        </LinearLayout>

        <Button
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/colorWhite"
                android:backgroundTint="@drawable/selector_accent"
                android:stateListAnimator="@null"
                android:text="@string/payOrder"
                app:cornerRadius="@dimen/_10sdp" />

    </LinearLayout>

</LinearLayout>