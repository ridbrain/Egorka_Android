<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackground"
        tools:context=".modules.aboutActivity.AboutActivity">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_40sdp"
            android:orientation="vertical"
            tools:ignore="UselessLeaf">

        <ImageView
                android:layout_width="@dimen/_150sdp"
                android:layout_height="@dimen/_50sdp"
                android:layout_marginTop="@dimen/_40sdp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/ic_logo"
                tools:ignore="ContentDescription"/>

        <TextView
                style="@style/Label"
                android:id="@+id/versionLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_gravity="center"
                android:text="Version 0.1"/>

        <Space
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"/>

        <TextView
                style="@style/Label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_gravity="center"
                android:text="Команда разработки"/>

        <ImageView
                android:layout_width="@dimen/_140sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginBottom="@dimen/_30sdp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/ic_broseph"
                tools:ignore="ContentDescription"/>

    </LinearLayout>

    <FrameLayout style="@style/MyActionBar">

        <TextView
                style="@style/MyActionTitle"
                android:text="@string/menu_about"/>

        <ImageView
                style="@style/MyActionLeft"
                android:id="@+id/backButton"
                tools:ignore="ContentDescription"/>

    </FrameLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>